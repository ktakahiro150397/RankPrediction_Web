@section css {

    <link rel="stylesheet" href="~/css/Index.css" />

}

@{

    ViewData["Title"] = "Apex 実力診断";

}

@section bodycontainer {

}


<article>

    @*サイトの趣旨を説明する*@
    <section>
        <div class="text-center" id="top_img_bg">
            <div class="row">
                <div class="col-sm-6 offset-md-2">
                    <div class="bg-main-desc">
                        <h1>AIでAPEXの実力を診断</h1>

                        <p>
                            あなたは初心者？それとも上級者？<br />
                            キルレ・平均ダメージから実力を診断しよう！<br />
                        </p>

                        <div>
                            <a class="btn btn-maincolor" asp-controller="ApexRank" asp-action="Input" onClickLoad>ランクを予測してみる</a>
                        </div>
                    </div>

                </div>
                <div class="col-sm-3 ">
                    <img src="~/sozai/EtXheooUUA8CO1c.png" alt="" class="img-fluid" id="top_img">
                </div>
            </div>
        </div>
