@model RankPrediction_Web.Models.ViewModels.PredictionResultViewModel

@{
    ViewData["Title"] = "診断結果";
}

@section bodycontainer {

    @*<div class="page-bg"></div>*@

}

@section css{

    <style>
        .btn-container {
            display: flex;
            flex-direction: column;
        }

            .btn-container .btn {
                margin-bottom: 1rem;
            }

        .rank-pic-div {
            position: relative;
            width: 100%;
        }

        .rank-pic {
            position: relative;
            top: 0%;
            left: 50%;
            transform: translateX(-50%);
            width: 80%;
        }

        .rank-desc {
            text-align: center;
            font-size: 1.5rem;
            margin-top: 1.5rem;
        }

        #lblRank{
            position:absolute;
            width:100%;
            top:0;
            left:0;
            border-bottom:.5rem solid orange;

        }

        .rank-result {
            position: relative;
            display: inline-block;
        }

            .rank-result::after {
                content: "";
                position: absolute;
                top: 2.1rem;
                left: 0;
                width: 100%;
                background-color: orange;
                /*opacity:0.9;*/
                height: .5rem;
                z-index: -1;
                transform: scale(1,1);
                transition: all .3s ease-in-out;
            }

/*            .rank-result:hover::after {
                transform: scale(1, 1);
            }*/

        @@media (min-width:575px) {
            .rank-pic {
                width: 70%;
                height: auto;
            }
        }

        @@media (min-width:768px) {
            .btn-container {
                width: 400px;
            }

            .rank-pic {
                width: 40%;
                height: auto;
            }
        }
        #result{
            padding-top:1em;
        }
    </style>

}

<article>

    <section>

        <h3 id="result">
            診断結果は...
        </h3>

        <div class="rank-pic-div">
            <img class="rank-pic" src=" @Model.PredictedResult.RankImageSrcString " />
        </div>

        <div class="rank-desc">

            <h1 class="rank-result">
                @Model.PredictedResult.PredictResult.RankNameJa
            </h1>
            @*相当！*@
