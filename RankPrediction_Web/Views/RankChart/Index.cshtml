@model RankPrediction_Web.Models.ViewModels.Chart.ChartIndexViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{     ViewData["title"] = "チャートトップ";
}

@section Scripts {

   

}

<article>
    <section>
        <p>サンプルのチャートです！</p>
        <p>とりあえず、現在データに登録されているランク別のキルレシオ平均データを出力</p>

        <canvas id="myChart" style="width:90%;height:60vh;"></canvas>


    </section>

</article>


<script>
    const ctx = document.getElementById('myChart');


    const chart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: [ @Html.Raw(@Model.RankAverageKillRatio.LabelsString) ],
            datasets: [{
                label: @Html.Raw(@Model.RankAverageKillRatio.ChartLabelString) ,
                data: [ @Model.RankAverageKillRatio.DataString ],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        }
    })

</script>
